{
  "compilerOptions": {
    "target": "es6",
    "lib": ["esnext"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib"
  },
  "exclude": ["node_modules"],
  "include": ["src/*.ts"]
}
